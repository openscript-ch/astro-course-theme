---
const { size } = Astro.props;
---

<style define:vars={{size}}>
  div {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  div > * {
    margin: 0;
    height: var(--size);
    width: var(--size);
    display: flex;
  }

  div img {
    max-width: 100%;
    width: auto;
  }
</style>

<div class="horizontal-blocks">
  <slot />
</div>
